/* menu */



/* === MENU MOBILE === */
.nav-mobile
  opacity 0
  visibility hidden
  overflow hidden
  display none
  position absolute
  z-index 999999
  width 155px

  > span
    // font_mixin($TitlingExt, 1.6em, purple)
    letter-spacing 1.6px
    text-transform uppercase
    position absolute
    top 20px

  /* icon opne menu mobile */
  .bt-menu-mobile
    border-radius 100%
    border 3px solid purple
    height 55px
    width 55px
    padding 5px 7px 0px 7px
    background-color purple
    float right

    .bar1, .bar2, .bar3
      width 35px
      height 5px
      background-color yellow
      margin 0 auto
      margin-top 6px
      margin-bottom 6px
      transition 0.4s

/* rotate menu icon */
.change
  background-color #fff !important
  border 3px solid #fff !important

  .bar1
    transform rotate(-45deg) translate(-9px, 6px)
    background-color purple !important

  .bar2
    opacity 0

  .bar3
    transform rotate(45deg) translate(-8px, -8px)
    background-color purple !important

/* conteudo do menu mobile */
.content-menu-mobile
  background-color purple
  height auto
  z-index 99999
  animation 0.5s ease-out 0s 1 slideInFromLeft
  left 0

  .brand
    margin 50px

  .nav-for-mobile
    & > ul
      & > li
        display block

        & > a
          // font_mixin($TitlingExt, 1.6em, #fff)
          letter-spacing 1.6px
          text-transform uppercase
          padding 25px 40px
          display block
          border 4px solid transparent
          border-top 0
          border-bottom 0
          &:hover, &.active
            border-left-color yellow

        .sub-nav
          background-color purple
          & > li
            display block

            & > a
              // font_mixin($TitlingExt, 1em, #fff)
              letter-spacing 1px
              text-transform uppercase
              padding 25px 40px
              display block
              border 4px solid transparent
              border-top 0
              border-bottom 0
              &:hover, &.active
                border-left-color yellow



/* Smartphones ----------- */
@media only screen and (min-width : 320px) and (max-width : 767px)
  .nav-mobile
    opacity 1 !important
    visibility visible !important
    overflow visible !important
    display block !important
    right 40px
    top 70px
/* end menu mobile */
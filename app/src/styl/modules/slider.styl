/* === CARROSSEL === */
.bxslider
	// background-color $golden
	> li
		width 60%

.bx-wrapper
	.bx-controls /* setas e dots */
		position absolute
		width 100%
		z-index 99
		.bx-pager-item /* dots */
			display inline-block
			left 6em
			a
				width 2.4em
				height 2.4em
				background-color #000
				// font_mixin($pop_reg, 1.2em, #fff)
				@extend .center-v-h
				&:hover, &.active
					// background-color $golden
					color #000



/* === SLIDER === */
.aux-banner
	.bx-wrapper
		height 350px

		.bx-controls /* setas e dots */
			bottom 10.2em

			.bx-pager /* dots */
				width 50%
				position absolute
				left 6em

			.bx-next, .bx-prev /* setas */
				position absolute

			.bx-next
				// @extend .seta-box-right
				right 5.6em

			.bx-prev
				// @extend .seta-box-left
				right 10.4em

	.bx-viewport
		@extend .bg-img-full

	.bxslider-hd
		& > li
			@extend .bg-img-full



/* === SLIDER DEPOIMENTOS === */
.depoimentos
	.bx-controls
		display none

	#bx-pager
		text-align center
		margin-bottom 5em

		a
			width 96px
			height 96px
			overflow hidden
			border-radius 50px
			display inline-block
			margin 0 1.6em
			position relative
			&:hover, &.active
				.mask
					background-color transparent

			.mask
				position absolute
				width 100%
				height 100%
				// background-color $golden
				opacity .4
				@extend .z-999

			img
				@extend .bg-img-full
				// @extend .color-flip

	.bxslider-depoimentos
		li
			text-align center
			p
				// font_mixin($pop_reg, 3.2em, #000)
				line-height 48px
				letter-spacing 3.2px
				width 80%
				margin 0 auto
			h3
				// font_mixin($pop_sbd, 2.4em, #000)
				margin-top 2.5em
				margin-bottom 1em


